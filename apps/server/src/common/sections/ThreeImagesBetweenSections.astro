---
import { Image } from 'astro:assets';
---

<div class="w-100 position-relative bg-black text-white bg-cover d-flex align-items-center">
  <div class="container-fluid px-vw-5">
    <div class="position-absolute w-100 h-50 bg-dark bottom-0 start-0"></div>
    <div class="row d-flex align-items-center position-relative justify-content-center px-0 g-5">
      <div class="col-12 col-lg-6">
        <Image src="/img/webp/abstract18.webp" width="2280" height="1732" alt="Abstract art" class="img-fluid position-relative rounded-5 shadow" data-aos="fade-up" />
      </div>
      <div class="col-12 col-md-6 col-lg-3">
        <Image
          src="/img/webp/abstract6.webp"
          width="1116"
          height="1578"
          alt="abstract bubbles art"
          class="img-fluid position-relative rounded-5 shadow"
          data-aos="fade-up"
          data-aos-duration="2000"
        />
      </div>
      <div class="col-12 col-md-6 col-lg-3">
        <Image
          src="/img/webp/abstract9.webp"
          width="1116"
          height="848"
          alt="abstract angles art"
          class="img-fluid position-relative rounded-5 shadow"
          data-aos="fade-up"
          data-aos-duration="3000"
        />
      </div>
    </div>
  </div>
</div>
